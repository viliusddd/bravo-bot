{
  "include": ["**/*.ts", "environment.d.ts"],

  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "outDir": "dist",
    "allowSyntheticDefaultImports": true,
    "noEmit": true,
    "allowImportingTsExtensions": true,

    "module": "ESNext",
    "target": "ESNext",
    // "moduleResolution": "NodeNext",
    "moduleResolution": "bundler",

    "strict": true,
    "sourceMap": true,

    "types": ["vitest/globals"],

    "paths": {
      "@/*": ["./src/*"],
      "@tests/*": ["./tests/*"]
    }
  }
}
